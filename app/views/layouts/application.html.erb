<!DOCTYPE html>
<html>
<head>
  <title>Loja de camisetas</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= nav_bar brand: "Loja", brand_link: root_url do %>
	<%= form_tag busca_produto_path, method: :get, class: "navbar-form navbar-left" do %>
		<div class="form-group">
			<%= text_field_tag :nome, @nome, class: "form-control" %>
			<%= button_to "Buscar", nil, class: "btn btn-default" %>
		</div>
	<% end %>
  <%= form_tag destroy_user_session_path, method: :delete, class: "navbar-form navbar-right" do %>
    <div class="form-group">
      <%= button_to "Sair", nil, class: "btn btn-default" %>
    </div>
  <% end %>
<% end %>
<div class="container">
	<%= yield %>
</div>

</body>
</html>
